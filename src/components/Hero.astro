---
import { Download } from '@lucide/astro';

// Puedes pasar estas variables por props para que sea reutilizable
const { name, title, subtitle, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="relative bg-gradient-to-br from-[#1e3a8a] to-[#1e40af] text-white">
  <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="text-balance font-bold tracking-tight leading-tight">
        <span class="block text-blue-300 text-4xl sm:text-5xl lg:text-6xl mb-2">{name},</span>
        <span class="block text-white text-3xl sm:text-4xl lg:text-5xl">{title}</span>
      </h1>
      
      <p class="mt-6 text-pretty text-lg leading-relaxed text-blue-100 sm:text-xl">
        {subtitle}
      </p>

      <div class="mt-10 flex flex-col gap-4 sm:flex-row sm:justify-center">
        <a 
          href="#contact" 
          class="inline-flex items-center justify-center rounded-md bg-white px-8 py-3 text-base font-medium text-[#1e3a8a] shadow-sm hover:bg-blue-50 transition-colors"
        >
          {primaryCTA}
        </a>

        <a 
          href="/cv.pdf" 
          download
          class="inline-flex items-center justify-center rounded-md border border-white bg-transparent px-8 py-3 text-base font-medium text-white hover:bg-white/10 transition-colors"
        >
          <Download class="mr-2 h-5 w-5" />
          {secondaryCTA}
        </a>
      </div>
    </div>
  </div>
</section>
