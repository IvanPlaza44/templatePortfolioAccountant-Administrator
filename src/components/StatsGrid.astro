---
const { stats } = Astro.props;

---

<section class="bg-slate-50 py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-6 lg:grid-cols-4">
      {stats.map((stat) => (
        <div class="p-8 text-center bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow">
          <p class="text-4xl md:text-5xl font-bold text-[#1e3a8a]">
            {stat.value}
          </p>
          <p class="mt-2 text-sm font-medium text-slate-600 uppercase tracking-wide">
            {stat.label}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>