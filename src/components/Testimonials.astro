---
const { title, description, items } = Astro.props;
---

<section class="py-24 bg-white">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
        {title}
      </h2>
      <p class="mt-4 text-pretty text-lg text-slate-600">
        {description}
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <div class="p-8 bg-white rounded-2xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow flex flex-col justify-between">
          <div>
            <div class="flex gap-1 mb-4">
              {[...Array(item.stars)].map(() => (
                <svg class="h-5 w-5 text-[#1e3a8a]" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            
            <p class="text-sm italic leading-relaxed text-slate-600 mb-6">
              "{item.content}"
            </p>
          </div>

          <div>
            <p class="font-semibold text-slate-900">{item.name}</p>
            <p class="text-sm text-slate-500">{item.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>